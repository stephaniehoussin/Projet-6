{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block nav %}
    {% include 'home/parts/navHome.html.twig' %}
    {% include 'home/parts/coverHome.html.twig' %}
{% endblock %}
{% block body %}
    <div class="container">
    <!-------------------SECTION DERNIERS SPOTS-------------->
    <section class="allSpots">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12 page_marge_top">
                    <hr class="mb-4">
                    <h2>Les derniers Spots</h2>
                    <hr class="mb-4">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row">
            {% if spots %}
                {% for spot in spots %}
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-spots">
                                <img class="card-img-top" src="{{ asset('uploads/spots/'~spot.picture) }}" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-spot-title"> <i class="fa fa-calendar">  {{ spot.date|date("d/m/Y") }}</i> <i class="fa fa-user"> {{ spot.user }}</i></h5>

                                    <p class="card-spot-description">Spot #{{ spot.id }}</p>
                                    <p class="card-spot-description">{{ spot.title }}</p>
                                    <p class="card-spot-description">{{ spot.description }}</p>
                                    <a href="{{ path('spot', { id : spot.id }) }}" class="btn btn-primary">Voir le spot</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}


        </div>
    </section>

        <!-------------------SECTION ASSOCIATION-------------->

        <section id="subscribe">
            <div class="container wow fadeInUp">
                <div class="row">
                    <div class="col-md-8">
                        <h3 class="subscribe-title">Recevoir la newsletter</h3>
                        <p class="subscribe-text">Tous les derniers spots postés et la vie d'une association !</p>
                    </div>
                    <div class="col-md-4 subscribe-btn-container">
                        <a class="subscribe-btn" href="#">M'inscrire</a>
                    </div>
                </div>
            </div>
        </section>

    <!-------------------SECTION STATS------------------>

    <section id="landing-title">
        <div class="container wow fadeInUp">
            <div class="row">
                <div class="col-md-12">
                    <h3>Aujourd'hui </h3>
                </div>
            </div>
        </div>
    </section>

    <section class="landing-stats-content">
        <div class="row">
            <div class="col-md-12">
                <div id="locale"></div>
            </div>
        </div>

        <div class="container-landing-stats-content">
            <div class="front-landing-stats-content">
                <p class="number">Nombre</p>
                <p class="text">Utilisateurs</p>

            </div>
        </div>
        <div class="container-landing-stats-content">
            <div class="front-landing-stats-content">
                <p class="number">Nombre</p>
                <p class="text">Spots</p>

            </div>
        </div>
        <div class="container-landing-stats-content">
            <div class="front-landing-stats-content">
                <p class="number">Nombre</p>
