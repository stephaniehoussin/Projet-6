{% if pagination.nbPages > 0 %}
    <nav aria-label="pagination">
        <ul class="pagination justify-content-center">
            {% if pagination.page > 1 %}
                <li class="page-item"><a class="page-link" href="{{ path('accueil/je-cherche-un-spot', {'page' : 1}) }}"><</a></li>
                <li class="page-item"><a class="page-link" href="{{ path('accueil/je-cherche-un-spot', {'page' : pagination.page - 1}) }}">Précédent</a></li>
            {% endif %}
            {% if pagination.page == 1 %}
                <li class="page-item disabled"><a class="page-link"><</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
            {% endif %}
            {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}
                <li class="page-item {% if p == pagination.page %}active{% endif %}">
                    <a class="page-link" href="{{ path('accueil/je-cherche-un-spot', {'page' : p}) }}">{{ p }}</a></li>
            {% endfor %}
            {% if pagination.page < pagination.nbPages %}
                <li class="page-item"><a class="page-link" href="{{ path('accueil/je-cherche-un-spot', {'page' : pagination.page + 1}) }}">Suivant</a></li>
                <li class="page-item"><a class="page-link" href="{{ path('accueil/je-cherche-un-spot', {'page' : pagination.nbPages}) }}">></a></li>
            {% endif %}
            {% if pagination.page == pagination.nbPages %}
                <li class="page-item disabled"><a class="page-link" href="#">Suivant</a></li>
                <li class="page-item disabled"><a class="page-link">></a></li>
            {% endif %}
        </ul>
    </nav>
{% endif %}