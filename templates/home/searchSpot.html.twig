{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
{% endblock %}

{% block nav %}
    {% include 'home/parts/navHome.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container">
        <section id="page-title">
            <div class="container wow fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Je cherche un spot</h2>
                    </div>
                </div>
            </div>
        </section>
        <section class="page-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="smap">
                            <div id="map-searchSpot"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="page-content">
            <div class="container">
                {{ form_start(formFilter) }}
                <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_label(formFilter.category) }}
                        {{ form_widget(formFilter.category) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(formFilter.user) }}
                        {{ form_widget(formFilter.user) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <button type="submit" class="btn btn-custom btn-block">Filtrer</button>
                        {{ form_end(formFilter) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
        <section class="page-content">
            <div class="container">
                <div class="row">
                        {% if spots %}
                            {% for spot in spots %}
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-spots">
                                            <img class="card-img-top img-fluid" src="{{ asset('uploads/spots/'~spot.picture) }}" alt="Card image cap">
                                            <div class="card-body">
                                                <hr class="mb-4">
                                                <p class="card-date"> <i class="fa fa-calendar"> <span>{{ spot.date|date("d/m/Y à H:h") }}</span></i>  <i class="fa fa-user"> Spoté par  <span>{{ spot.user }}</span></i></p>
                                                <p class="card-infos"><i class="fa fa-map-marker"> {{ spot.infosSupp }}</i></p>
                                                <p class="card-title"><span>{{ spot.title }}</span></p>
                                                <hr class="mb-4">
                                                <p class="card-description">"{{ spot.description|length > 40 ? spot.description|slice(0,40) ~'...': spot.description}}"</p>
                                                <a href="{{ path('accueil/spot', { id : spot.id }) }}" class="btn btn-primary">Voir le spot</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                <div class="row">
                    <div class="col-md-4 offset-4">
                        {% include 'pagination/homePagination.html.twig' %}
                    </div>
                </div>
                </div>
        </section>
        </div>


    <script>
        function initMap(position)
        {

            var map = L.map('map-searchSpot').setView([position.coords.latitude, position.coords.longitude],12);

            L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token={accessToken}', {
                attribution: 'Données de la carte &copy; <a href="http://www.openstreetmap.org/#map=5/51.500/-0.100">Open Street Map</a>',
                maxZoom: 18,
                id: 'mapbox.streets',
                accessToken:'pk.eyJ1Ijoic3RlcGhhbmllaG91c3NpbiIsImEiOiJjamg1ejFrNDYxZnNyMnFsbmsxOXFoNmwxIn0.Cfc6uy_CpLtKoUjAKMQelg'
            }).addTo(map);


            var $elements =
                [
                    {% for spot in spots %}
                    {% if spots %}
                    ["{{ spot.user }}", "{{ spot.id }}", "{{ spot.title }}", "{{ spot.category }}", "{{ spot.infosSupp }}", {{ spot.latitude }}, {{ spot.longitude }}],
                    {% endif %}
                    {% endfor %}
                ];


            for(var $i= 0; $i < $elements.length; $i++)
            {
                var url = window.location.host;
                var marker = new L.marker([$elements[$i][5], $elements[$i][6]])
                    .bindPopup(
                        '<div class="card-search">' +
                        '<div class="card-body"> ' +
                        '<p class="search-title"> Spot# '+$elements[$i][1] +'</p>' +
                        '<p><span> Spoteur</span> : '+$elements[$i][0] +'</p>' +
                        '<p><span> Catégorie</span> : '+$elements[$i][3] +'</p>' +
                        '<p><span> Titre</span> : '+$elements[$i][2] +'</p>' +
                        '<p><span> Adresse</span> : '+$elements[$i][4] +'</p>' +
                        '</div>' +
                        '<a href="http://'+ url +'/accueil/spot/'+$elements[$i][1]+'"  class="btn btn-primary">Voir le spot</a>' +
                        '</div>')
                    .addTo(map)
            }
        }
        if (navigator.geolocation)
            navigator.geolocation.getCurrentPosition(initMap);

</script>
{% endblock %}
{% block footer %}
    {% include 'landing/parts/footer.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
{% endblock %}


