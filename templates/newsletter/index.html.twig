{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block description %}{% endblock %}
{% block nav %}
    {% if app.user %}
    {% include 'home/parts/navHome.html.twig' %}
    {% else %}
    {% include 'landing/parts/navLanding.html.twig' %}
    {% endif %}
{% endblock %}
{% block body %}

    <div class="container">
        <section id="page-title">
            <div class="container wow fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Inscription Newsletter</h2>
                    </div>
                </div>
            </div>
        </section>
        {% if success %}
        <p>Vous êtes désormais inscrit à notre newsletter</p>
        <p>Un email vient de vous être envoyé </p>
        {% else %}
        <section class="newsletter">
            <div class="row">
                    <div class="col-md-6">
                        <div class="img-newsletter"></div>
                    </div>
                <div class="col-md-6">
                    <p class="newsletter-text">Retrouvez l'actualité de YouSpot dans votre boîte mail</p>
                    <hr class="mb-4">
                    {{ form_start(formNewsletter) }}
                    <div class="form-group">
                        {{ form_errors(formNewsletter) }}
                        {{ form_widget(formNewsletter, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-md-3 offset-md-4">
                        <button type="submit" class="btn btn-newsletter" name="submit">Envoyer</button>
                    </div>
                    {{ form_end(formNewsletter) }}
                </div>
            </div>
        </section>
    </div>
     {% endif %}
{% endblock %}
{% block footer %}
    {% include 'landing/parts/footer.html.twig' %}
{% endblock %}

