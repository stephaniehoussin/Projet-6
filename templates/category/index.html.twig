{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1 align="center">Liste des Categories</h1>

    <table width="40%">
        <tr bgcolor="yellow">
            <th>Id</th>
            <th>Nom</th>

        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}
